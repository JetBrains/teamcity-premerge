<?xml version="1.0" encoding="UTF-8" ?>
<dsl-extension kind="buildStep" type="preliminaryMerge" generateDslJar="true">
  <class name = "PreliminaryMerge">
    <description>
      This plugin allows running builds on merge results before the merge was committed. It helps to detect integration problems.
    </description>
  </class>
  <function name = "preliminaryMerge">
    <description>
      Enables Preliminary Merge Build Step
    </description>
  </function>
  <params>
    <param name="tar.br" dslName="targetBranchName">
      <description>
        Target branch name
      </description>
    </param>
  </params>
</dsl-extension>